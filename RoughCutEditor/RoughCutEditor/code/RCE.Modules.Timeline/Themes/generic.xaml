<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:local="clr-namespace:RCE.Modules.Timeline.Controls"> 

  <Style TargetType="local:ProgressiveDownloadIndicator">
    <Setter Property="Foreground" Value="Green"/>
    <Setter Property="Template">
      <Setter.Value>
        <ControlTemplate TargetType="local:ProgressiveDownloadIndicator">
          <Canvas VerticalAlignment="Stretch" HorizontalAlignment="Stretch" x:Name="IndicatorContainer" MaxHeight="{TemplateBinding MaxHeight}"
                          Background="{Binding Background,RelativeSource={RelativeSource TemplatedParent}, Mode=OneWay}"/>
        </ControlTemplate>
      </Setter.Value>
    </Setter>
  </Style>
</ResourceDictionary>






 
