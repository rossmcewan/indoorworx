<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
	<SolidColorBrush x:Key="TitlesBackgroundBrush" Color="Black"/>
    <LinearGradientBrush x:Key="TitleRectangleBackgroundBrush" StartPoint="0.421429,0.992424" EndPoint="0.421429,0">
        <GradientStop Color="#FF1F4E96" Offset="0"/>
        <GradientStop Color="#FF9CECF5" Offset="1"/>
    </LinearGradientBrush>

    <SolidColorBrush x:Key="TitlePathFillBrush" Color="White"/>
    <Style x:Key="TitlesPathStyle" TargetType="Path">
    	<Setter Property="Fill" Value="{StaticResource TitlePathFillBrush}"/>
    	<Setter Property="Stroke" Value="Black"/>
    	<Setter Property="Effect">
    		<Setter.Value>
    			<DropShadowEffect Opacity="1" ShadowDepth="2.5"/>
    		</Setter.Value>
    	</Setter>
    	<Setter Property="StrokeThickness" Value="0.5"/>
    </Style>
</ResourceDictionary>
