            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Image Source="../Images/facebook_large.png" Margin="2"/>
            <Image Source="../Images/twitter_large.png" Margin="2" Grid.Column="1"/>
            <Image Source="../Images/youtube_large.png" Margin="2" Grid.Column="2"/>
        </Grid>
        <telerik:RadCoverFlow x:Name="coverFlow" Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" OffsetY="60">
            <telerik:RadCoverFlowItem>
                <Image Source="../Images/suncity.jpg" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Height="200"/>
            </telerik:RadCoverFlowItem>
            <telerik:RadCoverFlowItem>
