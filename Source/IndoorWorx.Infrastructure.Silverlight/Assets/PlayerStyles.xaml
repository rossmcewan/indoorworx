        <GradientStop Color="White"
    		Offset="0.451" />
        <GradientStop Color="#FFBFF0F8"
    		Offset="0.82" />
    </LinearGradientBrush>
    <Style x:Key="MainPlayerButtonControlStyle" TargetType="Control">
        <Setter Property="Margin" Value="0,0,3,0"/>
    </Style>
