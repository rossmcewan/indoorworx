                        </telerik:RadTreeView.ItemTemplate>
                    </telerik:RadTreeView>
                </Grid>
            </controls:MetroContentControl>
            <Grid Grid.Column="1" Visibility="{Binding SelectedInterval, Mode=OneWay, Converter={StaticResource NullToVisibilityConverter}}">
                <Grid.ColumnDefinitions>
