<UserControl xmlns:controlsToolkit="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls.Toolkit"  xmlns:sdk="http://schemas.microsoft.com/winfx/2006/xaml/presentation/sdk"  xmlns:layoutToolkit="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls.Layout.Toolkit"  x:Class="IndoorWorx.Catalog.Views.CatalogView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:coverflow="clr-namespace:DC.ControlLibrary;assembly=DC.ControlLibrary"   
    xmlns:converters="clr-namespace:IndoorWorx.Infrastructure.Converters;assembly=IndoorWorx.Infrastructure.Silverlight" 
    xmlns:smoothstreaming="clr-namespace:Microsoft.Web.Media.SmoothStreaming;assembly=Microsoft.Web.Media.SmoothStreaming"             
    d:DesignHeight="500" d:DesignWidth="800"           
    mc:Ignorable="d" >    
    <UserControl.Resources>
        <converters:UrlToImageConverter x:Key="UrlToImageConverter"/>
    </UserControl.Resources>
    <Grid x:Name="LayoutRoot">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <layoutToolkit:Accordion                    
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            Grid.RowSpan="2"
            Margin="5"
            ItemsSource="{Binding Categories, Mode=TwoWay}" 
            SelectedItem="{Binding SelectedCategory, Mode=TwoWay}"    
            DisplayMemberPath="Title"
            SelectionMode="One">
            <layoutToolkit:Accordion.ContentTemplate>                
                <DataTemplate>
                    <coverflow:CoverFlowControl 
                        VerticalAlignment="Stretch"
                        HorizontalAlignment="Stretch"
                        ItemsSource="{Binding Catalogs, Mode=TwoWay}"
                        SelectedItem="{Binding SelectedCatalog, Mode=TwoWay}"
                        x:Name="coverFlow" 
                        CacheMode="BitmapCache"
                        DisplayMemberPath="Title"
                        Orientation="Vertical"
                        SpaceBetweenItems="30"
                        SpaceBetweenSelectedItemAndItems="30"
                        RotationAngle="0"
                        Scale="0.9"
                        ItemRenderTransformOrigin="0,0.5"/>
                </DataTemplate>
            </layoutToolkit:Accordion.ContentTemplate>
        </layoutToolkit:Accordion>
        <sdk:TabControl Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="2" Margin="5" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <sdk:TabItem Header="Videos">
                <Grid x:Name="imageGrid" Visibility="Visible">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.OpacityMask>
                            <LinearGradientBrush EndPoint="0,.5" StartPoint="1,.5">
                                <GradientStop Color="#00000000" Offset="1"/>
                                <GradientStop Color="#FF000000" Offset="0.8"/>
                                <GradientStop Color="#FE000000" Offset="0.2"/>
                                <GradientStop Color="#00000000" Offset="0"/>
                            </LinearGradientBrush>
                        </Grid.OpacityMask>
                        <coverflow:CoverFlowControl x:Name="flowControl2" CacheMode="BitmapCache" ItemsSource="{Binding SelectedCategory.SelectedCatalog.Children, Mode=TwoWay}" SelectedItem="{Binding SelectedCategory.SelectedCatalog.SelectedCatalog, Mode=TwoWay}" Margin="5">
                            <coverflow:CoverFlowControl.ItemTemplate>
                                <DataTemplate>
                                    <Border CornerRadius="10" BorderBrush="#99444444" BorderThickness="2" Background="{Binding Image, Converter={StaticResource UrlToImageConverter}, Mode=TwoWay}" >
                                        <smoothstreaming:SmoothStreamingMediaElement BufferingTime="00:00:05"  SmoothStreamingPlaybackMode="VideoOnly"  SmoothStreamingSource="http://www.indoorworx.com/media/FILE0001.ism/manifest" ClipError="SmoothStreamingMediaElement_ClipError"  SmoothStreamingErrorOccurred="SmoothStreamingMediaElement_SmoothStreamingErrorOccurred" AutoPlay="True"/>
                                        <!--<Image Source="{Binding Image, Mode=OneWay}" Margin="5">
                                        </Image>-->
                                    </Border>
                                </DataTemplate>
                            </coverflow:CoverFlowControl.ItemTemplate>
                        </coverflow:CoverFlowControl>
                    </Grid>
                    <TextBlock Text="{Binding SelectedCategory.SelectedCatalog.SelectedCatalog.Title, Mode=TwoWay}" Foreground="White" HorizontalAlignment="Center" Grid.Row="1" Margin="5" FontSize="25" />
                </Grid>
            </sdk:TabItem>
        </sdk:TabControl>
        <Border CornerRadius="5" BorderBrush="Gray" BorderThickness="2" Grid.Column="1" Grid.Row="1" Margin="5">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <TextBlock Style="{StaticResource ContentTextStyle}" Foreground="{StaticResource BodyTextColorBrush}"  Text="{Binding CatalogResources.Description, Source={StaticResource CatalogResources}}"/>
                <ScrollViewer x:Name="PageScrollViewer" Style="{StaticResource PageScrollViewerStyle}" Grid.Row="1">
                </ScrollViewer>
            </Grid>
        </Border>
        <controlsToolkit:HeaderedContentControl Grid.Column="2" Grid.Row="1" Header="Libraries" FontSize="18">
            
        </controlsToolkit:HeaderedContentControl>
    </Grid>
</UserControl>
