                                                                                    <telerik:RadButton Content="{Binding CatalogResources.PlayButtonText, Source={StaticResource CatalogResources}}" Width="50" Margin="2" CornerRadius="10" Command="{Binding DataContext.PlayTrainingSetCommand, Mode=OneWay, ElementName=LayoutRoot}" CommandParameter="{Binding SelectedTrainingSet, Mode=OneWay}" ToolTipService.ToolTip="{Binding CatalogResources.PlayTrainingSetToolTip, Source={StaticResource CatalogResources}}" Visibility="{Binding SelectedTrainingSet, Mode=TwoWay, Converter={StaticResource NullToVisibilityConverter}}" />
                                                                                </StackPanel>
                                                                            </Grid>
                                                                        </Border>
                                                                        <Border Grid.Column="1" Grid.Row="0" CornerRadius="10" Margin="10">
                                                                            <Border.Background>
                                                                                <SolidColorBrush Color="White" Opacity="0.5"/>
                                                                            </Border.Background>
                                                                            <Grid>
                                                                                <Grid.RowDefinitions>
                                                                                    <RowDefinition Height="Auto"/>
                                                                                    <RowDefinition Height="*"/>
                                                                                </Grid.RowDefinitions>
                                                                                <TextBlock Text="{Binding CatalogResources.DescriptionTitle, Source={StaticResource CatalogResources}}" Margin="5" FontWeight="Bold"/>
                                                                                <ScrollViewer Grid.Row="1" HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto" BorderBrush="Transparent">
                                                                                    <TextBlock Text="{Binding SelectedTrainingSet.Description, Mode=OneWay}" TextWrapping="Wrap" />
                                                                                </ScrollViewer>
                                                                            </Grid>
                                                                        </Border>
                                                                    </Grid>
                                                                </telerik:RadFluidContentControl.LargeContent>
