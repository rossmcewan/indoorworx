<UserControl xmlns:sdk="http://schemas.microsoft.com/winfx/2006/xaml/presentation/sdk"  xmlns:layoutToolkit="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls.Layout.Toolkit"  x:Class="IndoorWorx.Catalog.Views.CatalogView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:coverflow="clr-namespace:DC.ControlLibrary;assembly=DC.ControlLibrary"   
    xmlns:converters="clr-namespace:IndoorWorx.Infrastructure.Converters;assembly=IndoorWorx.Infrastructure.Silverlight"             
    mc:Ignorable="d">    
    <UserControl.Resources>
        <converters:UrlToImageConverter x:Key="UrlToImageConverter"/>
    </UserControl.Resources>
    <Grid x:Name="LayoutRoot">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="500"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="300"/>
            <RowDefinition Height="150"/>
        </Grid.RowDefinitions>
        <layoutToolkit:Accordion 
            Grid.RowSpan="2"
            Margin="5"
            ItemsSource="{Binding Categories, Mode=TwoWay}" 
            SelectedItem="{Binding SelectedCategory, Mode=TwoWay}"    
            DisplayMemberPath="Title"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            SelectionMode="One">
            <layoutToolkit:Accordion.ContentTemplate>                
                <DataTemplate>
                    <coverflow:CoverFlowControl 
                        VerticalAlignment="Stretch"
                        HorizontalAlignment="Stretch"
                        ItemsSource="{Binding Catalogs, Mode=TwoWay}"
                        SelectedItem="{Binding SelectedCatalog, Mode=TwoWay}"
                        x:Name="coverFlow" 
                        CacheMode="BitmapCache"
                        DisplayMemberPath="Title"
                        Orientation="Vertical"
                        SpaceBetweenItems="30"
                        SpaceBetweenSelectedItemAndItems="30"
                        RotationAngle="0"
                        Scale="0.9"
                        ItemRenderTransformOrigin="0,0.5"/>
                </DataTemplate>
            </layoutToolkit:Accordion.ContentTemplate>
        </layoutToolkit:Accordion>
        <sdk:TabControl Grid.Row="0" Grid.Column="1" Margin="5" HorizontalAlignment="Stretch">
            <sdk:TabItem Header="Videos">                                
                <coverflow:CoverFlowControl x:Name="flowControl2" CacheMode="BitmapCache" ItemsSource="{Binding SelectedCategory.SelectedCatalog.Children}" >
                    <coverflow:CoverFlowControl.ItemTemplate>
                        <DataTemplate>
                            <Border CornerRadius="10" BorderBrush="#99444444" BorderThickness="2" Background="{Binding Image, Converter={StaticResource UrlToImageConverter}}" >
                                <Image Source="{Binding ImageAsString}" Opacity="0"  >
                                </Image>
                            </Border>
                        </DataTemplate>
                    </coverflow:CoverFlowControl.ItemTemplate>
                </coverflow:CoverFlowControl>
            </sdk:TabItem>
        </sdk:TabControl>
    </Grid>
</UserControl>
