                                                        </Grid>
                                                    </DataTemplate>
                                                </telerik:RadTileView.ContentTemplate>
                                            </telerik:RadTileView>
                                        </Grid>
                                    </telerik:RadPane>
                                </telerik:RadPaneGroup>
                            </telerik:RadSplitContainer>
                        </telerik:RadDocking.DocumentHost>
